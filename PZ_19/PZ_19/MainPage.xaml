<Page
    x:Class="PZ_19.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F0F0F0">

    <Grid Background="Gray" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,10,20,0">
            <TextBlock x:Name="HistoryDisplay" TextAlignment="Right" Foreground="White" FontSize="14" Height="20"/>
            <TextBlock x:Name="Display" Text="0" TextAlignment="Right" FontSize="44" FontWeight="Light"/>
        </StackPanel>

        <Grid Grid.Row="2" Padding="5">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="C" Grid.Row="0" Grid.Column="0" Click="Clear_Click" Background="#FFD6D6"/>
            <Button Content="√" Grid.Row="0" Grid.Column="1" Click="Operation_Click"/>
            <Button Content="^" Grid.Row="0" Grid.Column="2" Click="Operation_Click"/>
            <Button Content="/" Grid.Row="0" Grid.Column="3" Click="Operation_Click"/>

            <Button Content="7" Grid.Row="1" Grid.Column="0" Click="Number_Click"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Click="Number_Click"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Click="Number_Click"/>
            <Button Content="*" Grid.Row="1" Grid.Column="3" Click="Operation_Click"/>

            <Button Content="4" Grid.Row="2" Grid.Column="0" Click="Number_Click"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Click="Number_Click"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Click="Number_Click"/>
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="Operation_Click"/>

            <Button Content="1" Grid.Row="3" Grid.Column="0" Click="Number_Click"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Click="Number_Click"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Click="Number_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="Operation_Click"/>

            <Button Content="+/-" Grid.Row="4" Grid.Column="0" Click="PlusMinus_Click"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Click="Number_Click"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Click="Equal_Click" Background="#CCE5FF"/>
        </Grid>
    </Grid>
</Page>