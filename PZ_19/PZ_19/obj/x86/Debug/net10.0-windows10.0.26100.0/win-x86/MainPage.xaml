<Page
    x:Class="PZ_19.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#F0F0F0">

    <Grid Background="Gray" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20,10,20,0">
            <TextBlock x:ConnectionId='21' x:Name="HistoryDisplay" TextAlignment="Right" Foreground="White" FontSize="14" Height="20"/>
            <TextBlock x:ConnectionId='22' x:Name="Display" Text="0" TextAlignment="Right" FontSize="44" FontWeight="Light"/>
        </StackPanel>

        <Grid Grid.Row="2" Padding="5">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:ConnectionId='2' Content="C" Grid.Row="0" Grid.Column="0"                     Background="#FFD6D6"/>
            <Button x:ConnectionId='3' Content="√" Grid.Row="0" Grid.Column="1"                        />
            <Button x:ConnectionId='4' Content="^" Grid.Row="0" Grid.Column="2"                        />
            <Button x:ConnectionId='5' Content="/" Grid.Row="0" Grid.Column="3"                        />

            <Button x:ConnectionId='6' Content="7" Grid.Row="1" Grid.Column="0"                     />
            <Button x:ConnectionId='7' Content="8" Grid.Row="1" Grid.Column="1"                     />
            <Button x:ConnectionId='8' Content="9" Grid.Row="1" Grid.Column="2"                     />
            <Button x:ConnectionId='9' Content="*" Grid.Row="1" Grid.Column="3"                        />

            <Button x:ConnectionId='10' Content="4" Grid.Row="2" Grid.Column="0"                     />
            <Button x:ConnectionId='11' Content="5" Grid.Row="2" Grid.Column="1"                     />
            <Button x:ConnectionId='12' Content="6" Grid.Row="2" Grid.Column="2"                     />
            <Button x:ConnectionId='13' Content="-" Grid.Row="2" Grid.Column="3"                        />

            <Button x:ConnectionId='14' Content="1" Grid.Row="3" Grid.Column="0"                     />
            <Button x:ConnectionId='15' Content="2" Grid.Row="3" Grid.Column="1"                     />
            <Button x:ConnectionId='16' Content="3" Grid.Row="3" Grid.Column="2"                     />
            <Button x:ConnectionId='17' Content="+" Grid.Row="3" Grid.Column="3"                        />

            <Button x:ConnectionId='18' Content="+/-" Grid.Row="4" Grid.Column="0"                        />
            <Button x:ConnectionId='19' Content="0" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"                     />
            <Button x:ConnectionId='20' Content="=" Grid.Row="4" Grid.Column="3"                     Background="#CCE5FF"/>
        </Grid>
    </Grid>
</Page>

