<Page
    x:Class="PZ_26.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PZ_26"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Главная страница" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="Yellow" HorizontalAlignment="Center"/>

            <Button x:ConnectionId='2' Content="Перейти на страницу 1" 
                                           Background="Blue" Width="280" FontSize="18"/>
            <Button x:ConnectionId='3' Content="Перейти на страницу 2" 
                                           Background="Red" Width="280" FontSize="18"/>
            <Button x:ConnectionId='4' Content="Перейти на страницу 3" 
                                           Background="Green" Width="280" FontSize="18"/>
        </StackPanel>
    </Grid>
</Page>

