<Page
    x:Class="PZ_21.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PZ_21"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' x:Name="ParentGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Name:" FontSize="18" Margin="0,0,0,8"/>
            <TextBox x:ConnectionId='4' x:Name="txtName" PlaceholderText="Enter your name" Width="250" HorizontalAlignment="Left"/>
            <Button x:ConnectionId='5' x:Name="btnSubmit" Content="Submit" Margin="0,12,0,0"                        />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,16,0,0">
            <TextBlock Text="Actual width:" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock Text="{Binding ElementName=ParentGrid, Path=ActualWidth}"
                       VerticalAlignment="Center" FontWeight="SemiBold" FontSize="16"/>
        </StackPanel>

        <TextBlock x:ConnectionId='3' x:Name="tbGreeting" Grid.Row="3" Margin="20" FontSize="22"
                   VerticalAlignment="Top" Visibility="Collapsed" Foreground="DarkBlue"/>
    </Grid>
</Page>

