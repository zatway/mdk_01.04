<Page
    x:Class="PZ_18.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PZ_18"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <SplitView x:ConnectionId='2' x:Name="MainSplitView"
               DisplayMode="Inline"
               IsPaneOpen="False"
               OpenPaneLength="200"
               CompactPaneLength="50" Background="Gray">

        <SplitView.Pane>
            <StackPanel Background="LightGray" VerticalAlignment="Stretch">
                <Rectangle Fill="Red" Height="50" Margin="10"/>
                <Rectangle Fill="Blue" Height="50" Margin="10"/>
                <Rectangle Fill="Green" Height="50" Margin="10"/>
                <Rectangle Fill="Yellow" Height="50" Margin="10"/>
                <Rectangle Fill="Purple" Height="50" Margin="10"/>
            </StackPanel>
        </SplitView.Pane>

        <SplitView.Content>
            <Grid Background="Gray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:ConnectionId='3' x:Name="TogglePaneButton"
                       
                        Content="Открыть панель"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Padding="20,10"
                                                      />

                <TextBox x:ConnectionId='4' x:Name="StatusTextBox"
                         Grid.Row="0"
                         Grid.Column="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Width="250"
                         Height="50"
                         Text="Панель закрыта"
                         IsReadOnly="True"
                         TextAlignment="Center"
                         FontSize="16"/>

                <Border Grid.Row="1" Grid.Column="0" Background="LightBlue" Margin="20">
                    <TextBlock Text="Ячейка 2×1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Background="LightGreen" Margin="20">
                    <TextBlock Text="Ячейка 2×2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

